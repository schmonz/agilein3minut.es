var.sitecanonical	= "agilein3minut.es"
var.siteroot		= "/home/schmonz/sites/agilein3minut.es/www/"
var.siteport		= 36375
var.siteport_tls	= 36400

include			"/etc/lighttpd/schmonz_ssl.conf"
include			"/etc/lighttpd/schmonz_hosted.conf"

server.modules		+= ("mod_cgi")
alias.url		+= ("/cgi" => siteroot + "cgi/")
$HTTP["url"]		=~ "^/cgi/" { cgi.assign = ("" => "") }

include			siteroot + "../../schmonz.com/wiki/conf/lighttpd-authiwiki"

url.redirect		= ( "^/index.rss" => "/archive/index.rss" )
